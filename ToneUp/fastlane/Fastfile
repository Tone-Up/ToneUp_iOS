# fastlane/Fastfile

default_platform(:ios)

platform :ios do
  PROJECT_NAME = "ToneUp.xcodeproj"
  TARGET_NAME = "ToneUp"

  # âœ… App Store Connect API Key ì •ì˜
  def my_api_key
  app_store_connect_api_key(
    key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
    issuer_id: ENV["APP_STORE_CONNECT_API_ISSUER_ID"],
    key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
    is_key_content_base64: true
  )
end

  desc "ğŸ”¥ TestFlight ë°°í¬ìš© ë² íƒ€ lane"
  lane :beta do
    puts "âœ… [DEBUG] Authorization ENV: #{ENV["MATCH_GIT_BASIC_AUTHORIZATION"] ? "SET" : "âŒ EMPTY"}"

    match(
      type: "appstore",
      api_key: my_api_key # âœ… ì´ ì¤„ ì¶”ê°€!
    )

    increment_build_number(xcodeproj: PROJECT_NAME)

    build_app(scheme: TARGET_NAME)
    upload_to_testflight
  end

  desc "ğŸš€ App Store ì •ì‹ ë¦´ë¦¬ì¦ˆ"
  lane :release do
    match(
      type: "appstore",
      api_key: app_store_connect_api_key # âœ… ë¦´ë¦¬ì¦ˆì—ë„ ì ìš©!
    )

    build_app(scheme: TARGET_NAME)
    upload_to_app_store
  end

  desc "ğŸ›  ë²„ì „/ë¹Œë“œ ì„¤ì • í›„ git íƒœê·¸ ìƒì„±"
  lane :set_version do |options|
    version = options[:version]

    increment_version_number(
      version_number: version,
      xcodeproj: PROJECT_NAME,
      target: TARGET_NAME
    )

    commit_version_bump(message: "ğŸ”– Version bump to #{version}")
    push_to_git_remote
    add_git_tag(tag: "v#{version}")
    push_git_tags
  end

  error do |lane, exception, options|
    UI.error("ğŸ’¥ [#{lane}]ì—ì„œ ì—ëŸ¬ ë°œìƒ: #{exception.message}")
  end
end

